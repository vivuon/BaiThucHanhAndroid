<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/smallSpace"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    >



    <ImageView
        android:id="@+id/ivImage_TR"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_highland" />

    <TextView
        android:id="@+id/tvName_TR"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImage_TR"
        android:layout_alignStart="@+id/ivImage_TR"
        android:layout_alignEnd="@+id/ivImage_TR"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:text="HighLand Coffee"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ivImage_TR"
        app:layout_constraintStart_toStartOf="@+id/ivImage_TR"
        app:layout_constraintTop_toBottomOf="@+id/ivImage_TR" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName_TR"
        android:layout_alignStart="@+id/ivImage_TR"
        android:layout_alignEnd="@+id/ivImage_TR"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:text="Rate:"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/ivImage_TR"
        app:layout_constraintStart_toStartOf="@+id/ivImage_TR"
        app:layout_constraintTop_toBottomOf="@+id/tvName_TR" />
</RelativeLayout>